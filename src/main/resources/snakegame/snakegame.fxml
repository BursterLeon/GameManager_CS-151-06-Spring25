<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="snakegame.SnakeController">

    <Canvas fx:id="gameCanvas" width="600" height="600"
            AnchorPane.topAnchor="60"
            AnchorPane.bottomAnchor="0"
            AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0"/>

    <HBox spacing="20" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10">
        <Text fx:id="scoreText" styleClass="score-text"/>
        <Text fx:id="highScoreText" styleClass="score-text"/>
    </HBox>

</AnchorPane>